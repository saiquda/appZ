@{
    ViewData["Title"] = "Home Page";
}
@model CountriesSubjectsCitiesViewModel
<ul class="nav nav-tabs">
    @foreach (var item in Model.Countries)
    {
    <li class="nav-item" >
        <a class = "nav-link"asp-controller="Home" asp-action="Index" asp-route-CountryId="@item.Id" >@item.Name</a>
    </li>
    }
</ul>

<div class="tab-content">
    <div class="tab-pane fade show active" id="description">
        <table class ="ttable" border="0" cellpadding="0" cellspacing="2">
            <tr>
                <td>
                    @await Component.InvokeAsync("SubjectsTable",Model.Subjects)
                </td>
                <td>
                    @await Component.InvokeAsync("CitiesTable",new { Model.Cities, ViewBag.CityId })
                </td>
            </tr>
        </table>
    </div>
</div>

